vrrp_instance VI_1 {
    state MASTER
    interface eth0                # Сетевой интерфейс (замените на нужный)
    virtual_router_id 51          # Идентификатор группы VRRP
    priority 100                  # Приоритет для MASTER
    advert_int 1                  # Интервал обмена VRRP-пакетами
    authentication {
        auth_type PASS
        auth_pass securepassword  # Пароль для авторизации VRRP
    }
    virtual_ipaddress {
        192.168.1.100             # Виртуальный IP (VIP)
    }
}